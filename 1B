#include<stdio.h>
#include<string.h>
int main(){
    int pos,n,i=0,j=0;
    char a[20],b[50],ch;
    scanf("%s",&a);
    n=strlen(a);
    scanf("%d",&pos);
    if(pos>n){
        printf("enter the posituon again\n");
        scanf("%d",&pos);
    }
    scanf(" %c",&ch);
    strcpy(b,"dlestx");
    j=strlen(b);
    while(i<n){
        if(i==pos-1){
            b[j++]='d',b[j++]='l',b[j++]='e',b[j++]=ch,b[j++]='d',b[j++]='l',b[j++]='e';
        }
        if(a[i]=='d' && a[i+1]=='l' && a[i+2]=='e'){
            b[j++]='d',b[j++]='l',b[j++]='e';
        }
        b[j++]=a[i++];
    }
    strcpy(b+j,"dleetx");
    printf("%s",b);
}
